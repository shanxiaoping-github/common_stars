<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:baselineAligned="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/title_bar"
            android:text="欢迎注册" />

        <ImageButton
            android:id="@+id/regist_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@color/emptyColor"
            android:src="@drawable/top_back_ground" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip" >

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/personal_password_1" />

        <EditText
            android:id="@+id/edtMobile"
            style="@style/normal_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dip"
            android:background="@color/emptyColor"
            android:hint="请输入你的手机号(即为账号)"
            android:inputType="phone"
            android:textColor="@color/shallowGray"
            android:textColorHint="@color/hintColor" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/baseColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip" >

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/personal_password_1" />

        <EditText
            android:id="@+id/edtPassword"
            style="@style/normal_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dip"
            android:background="@color/emptyColor"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:textColor="@color/shallowGray"
            android:textColorHint="@color/hintColor" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/baseColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip" >

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/personal_password_3" />

        <EditText
            android:id="@+id/edtRePassword"
            style="@style/normal_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dip"
            android:background="@color/emptyColor"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:textColor="@color/shallowGray"
            android:textColorHint="@color/hintColor" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/baseColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <ImageView
            android:layout_gravity="bottom"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/personal_password_1" />

        <EditText
            android:id="@+id/edtCode"
            style="@style/normal_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dip"
            android:background="@color/emptyColor"
            android:hint="输入手机验证码"
            android:inputType="number"
            android:textColor="@color/shallowGray"
            android:textColorHint="@color/hintColor" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnCode"
            style="@style/small_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="5dip"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/baseColor" />

    <LinearLayout
        android:id="@+id/regist_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dip"
        android:layout_marginRight="35dip"
        android:layout_marginTop="35dip"
        android:background="@drawable/blue_btn_back_ground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/personal_ic_ok" />

        <TextView
            style="@style/small_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="确认"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        style="@style/small_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dip"
        android:text="确认之后完善相关资料  >"
        android:textColor="@color/shallowGray" />

</LinearLayout>