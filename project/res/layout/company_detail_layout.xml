<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColor"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/company_detail_title"
            style="@style/title_bar"
            android:text="企业介绍" />

        <ImageButton
            android:id="@+id/company_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@color/emptyColor"
            android:src="@drawable/top_back_ground" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/company_detail_img"
        android:layout_width="match_parent"
        android:layout_height="200dip" />

    <TextView
        android:id="@+id/company_detail_introduce"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="@color/white"
        android:padding="10dip"
        android:text="介绍"
        android:textColor="@color/shallowGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:padding="10dip" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/product_ic_address" />

        <TextView
            android:id="@+id/company_detail_adress"
            style="@style/normal_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dip"
            android:text="地址:xxxxxxxxxxxxxxxxxxxxxx"
            android:textColor="@color/shallowGray" />
    </LinearLayout>

    <View
        android:layout_width="1dip"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/company_detail_msg_cotact"
            android:layout_width="140dip"
            android:layout_height="40dip"
            android:background="@drawable/home_bj_investigation"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/introduction_messge_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="短信联系"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/company_detail_telphone"
            android:layout_width="140dip"
            android:layout_height="40dip"
            android:background="@drawable/home_bj_advert"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/introduction_phone_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="电话联系"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>